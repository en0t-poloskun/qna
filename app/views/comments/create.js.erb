$('#<%= "comments_form_#{@commentable.class.to_s.downcase}_#{@commentable.id}" %> > .comment-errors')
                                                            .html('<%= render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
  $('#<%= "comments_#{@commentable.class.to_s.downcase}_#{@commentable.id}" %>').append('<%= j render @comment %>');
  $('#<%= "comments_form_#{@commentable.class.to_s.downcase}_#{@commentable.id}" %> #comment_body').val('');
<% end %>
